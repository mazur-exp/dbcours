<% page_title ||= 'CRM' %>
<% stats ||= nil %>
<% extra_links ||= [] %>
<% crm_root = Rails.env.production? ? "https://crm.aidelivery.tech" : "/crm_login" %>

<%# Иконки для разных страниц %>
<% page_icons = {
  'CRM' => '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"/>',
  'Messenger' => '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>',
  'Источники трафика' => '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>',
  'Analytics Dashboard' => '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>'
} %>
<% default_icon = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>' %>
<% icon_path = page_icons[page_title] || default_icon %>

<header class="bg-white shadow-sm border-b border-gray-200 sticky top-0 z-10">
  <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <!-- Logo and title -->
      <div class="flex items-center">
        <div class="flex-shrink-0 flex items-center">
          <%= link_to crm_root, class: "flex items-center" do %>
            <div class="w-10 h-10 bg-gradient-to-br from-green-500 to-emerald-600 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <%= icon_path.html_safe %>
              </svg>
            </div>
            <div class="ml-3">
              <h1 class="text-lg font-semibold text-gray-900">Delivery Booster</h1>
              <p class="text-xs text-gray-500"><%= page_title %></p>
            </div>
          <% end %>
        </div>
      </div>

      <div class="flex items-center gap-4">
        <% if stats.present? %>
          <!-- Статистика -->
          <div class="hidden md:flex items-center gap-6 text-sm">
            <% stats.each do |stat| %>
              <div class="flex items-center gap-2">
                <span class="text-gray-500"><%= stat[:label] %>:</span>
                <span class="font-bold <%= stat[:color] || 'text-gray-900' %>"><%= stat[:icon] %> <%= stat[:value] %></span>
              </div>
            <% end %>
          </div>
        <% end %>

        <% extra_links.each do |link| %>
          <%= link_to link[:path], class: "text-sm text-gray-600 hover:text-gray-900" do %>
            <%= link[:label] %>
          <% end %>
        <% end %>

        <%= render 'shared/auth_button' %>
      </div>
    </div>
  </div>
</header>
