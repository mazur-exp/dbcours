<div class="h-screen flex flex-col bg-gray-100" data-controller="messenger">
  <!-- Навигация -->
  <nav class="bg-white shadow-sm border-b border-gray-200 flex-shrink-0">
    <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex items-center">
          <%= link_to root_path, class: "flex items-center gap-3" do %>
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
            <span class="text-lg font-bold text-gray-900">Messenger</span>
          <% end %>
        </div>
        <div class="flex items-center gap-4">
          <%= link_to "Главная", root_path, class: "text-gray-600 hover:text-gray-900" %>
          <%= render partial: "shared/auth_button" %>
        </div>
      </div>
    </div>
  </nav>

  <!-- 3-панельная структура -->
  <div class="flex-1 flex overflow-hidden">
    <!-- Левая панель: список чатов -->
    <aside class="w-80 bg-white border-r border-gray-200 flex flex-col">
      <div class="p-4 border-b border-gray-200 flex-shrink-0">
        <h2 class="text-lg font-bold text-gray-900">Чаты</h2>
        <p class="text-sm text-gray-500"><%= @conversations.size %> беседа(ы)</p>
      </div>

      <div class="flex-1 overflow-y-auto" id="conversations-list" data-messenger-target="conversationsList">
        <% if @conversations.any? %>
          <% @conversations.each do |conversation| %>
            <%= render partial: 'conversation_item', locals: { conversation: conversation, active: conversation == @active_conversation } %>
          <% end %>
        <% else %>
          <div class="p-8 text-center text-gray-500">
            <svg class="w-16 h-16 mx-auto mb-4 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
            <p class="text-lg font-semibold mb-2">Нет активных чатов</p>
            <p class="text-sm">Пользователи появятся здесь после первого сообщения</p>
          </div>
        <% end %>
      </div>
    </aside>

    <!-- Средняя панель: переписка -->
    <main class="flex-1 flex flex-col bg-gray-50" data-conversation-id="<%= @active_conversation&.id %>">
      <% if @active_conversation %>
        <!-- Заголовок чата -->
        <div class="bg-white border-b border-gray-200 p-4 flex items-center gap-3 flex-shrink-0">
          <%= user_avatar(@active_user) %>
          <div>
            <h3 class="font-bold text-gray-900"><%= @active_user.full_name %></h3>
            <% if @active_user.username.present? %>
              <p class="text-sm text-gray-500">@<%= @active_user.username %></p>
            <% end %>
          </div>
        </div>

        <!-- Сообщения -->
        <div class="flex-1 overflow-y-auto p-4 space-y-4" id="messages-container" data-messenger-target="messages">
          <%= render partial: 'messages', locals: { messages: @messages } %>
        </div>

        <!-- Input для отправки сообщения -->
        <div class="bg-white border-t border-gray-200 p-4 flex-shrink-0">
          <form data-action="submit->messenger#sendMessage" class="flex gap-3">
            <textarea
              data-messenger-target="input"
              data-action="keydown->messenger#handleKeydown"
              rows="1"
              placeholder="Написать сообщение..."
              class="flex-1 resize-none rounded-lg border border-gray-300 px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              style="max-height: 120px;"
            ></textarea>
            <button
              type="submit"
              class="bg-blue-500 hover:bg-blue-600 text-white font-bold px-6 py-3 rounded-lg transition-colors flex items-center gap-2"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
              </svg>
              Отправить
            </button>
          </form>
        </div>
      <% else %>
        <!-- Пустое состояние -->
        <div class="flex-1 flex items-center justify-center">
          <div class="text-center text-gray-500">
            <svg class="w-24 h-24 mx-auto mb-4 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
            <p class="text-xl font-semibold mb-2">Выберите чат</p>
            <p>Выберите беседу слева, чтобы начать общение</p>
          </div>
        </div>
      <% end %>
    </main>

    <!-- Правая панель: профиль пользователя -->
    <% if @active_user %>
      <aside class="w-80 bg-white border-l border-gray-200 overflow-y-auto">
        <div class="p-6">
          <!-- Аватар и имя -->
          <div class="text-center mb-6">
            <%= user_avatar_or_initials(@active_user, css_classes: "mx-auto mb-4", size_classes: "w-24 h-24", text_size: "text-3xl") %>
            <h3 class="text-xl font-bold text-gray-900 mb-1"><%= @active_user.full_name %></h3>
            <% if @active_user.username.present? %>
              <p class="text-gray-600">@<%= @active_user.username %></p>
            <% end %>
          </div>

          <!-- Информация о пользователе -->
          <div class="space-y-4">
            <div class="bg-gray-50 rounded-lg p-4">
              <h4 class="text-sm font-semibold text-gray-700 mb-3">Информация</h4>

              <div class="space-y-3">
                <div>
                  <p class="text-xs text-gray-500 mb-1">Telegram ID</p>
                  <p class="text-sm font-mono text-gray-900"><%= @active_user.telegram_id %></p>
                </div>

                <div>
                  <p class="text-xs text-gray-500 mb-1">Дата регистрации</p>
                  <p class="text-sm text-gray-900"><%= @active_user.created_at.strftime("%d.%m.%Y %H:%M") %></p>
                </div>

                <div>
                  <p class="text-xs text-gray-500 mb-1">Статус</p>
                  <span class="inline-block px-2 py-1 text-xs font-semibold rounded-full <%= @active_user.authenticated ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                    <%= @active_user.authenticated ? 'Авторизован' : 'Не авторизован' %>
                  </span>
                </div>
              </div>
            </div>

            <!-- Статистика сообщений -->
            <div class="bg-gray-50 rounded-lg p-4">
              <h4 class="text-sm font-semibold text-gray-700 mb-3">Статистика</h4>

              <div class="space-y-3">
                <div class="flex items-center justify-between">
                  <span class="text-sm text-gray-600">Всего сообщений</span>
                  <span class="font-bold text-gray-900"><%= @active_conversation.messages.count %></span>
                </div>

                <div class="flex items-center justify-between">
                  <span class="text-sm text-gray-600">От пользователя</span>
                  <span class="font-bold text-gray-900"><%= @active_conversation.messages.incoming.count %></span>
                </div>

                <div class="flex items-center justify-between">
                  <span class="text-sm text-gray-600">От вас</span>
                  <span class="font-bold text-gray-900"><%= @active_conversation.messages.outgoing.count %></span>
                </div>

                <% if @active_conversation.messages.any? %>
                  <div>
                    <p class="text-xs text-gray-500 mb-1">Первое сообщение</p>
                    <p class="text-sm text-gray-900"><%= @active_conversation.messages.by_time.first.created_at.strftime("%d.%m.%Y %H:%M") %></p>
                  </div>

                  <div>
                    <p class="text-xs text-gray-500 mb-1">Последняя активность</p>
                    <p class="text-sm text-gray-900"><%= @active_conversation.last_message_at&.strftime("%d.%m.%Y %H:%M") %></p>
                  </div>
                <% end %>
              </div>
            </div>

            <% if @current_user&.admin? %>
              <!-- Опасная зона - только для админов -->
              <div class="border-t border-gray-200 mt-6 pt-6">
                <h4 class="text-sm font-semibold text-red-600 mb-3">Опасная зона</h4>
                <%= button_to messenger_delete_user_path(@active_user),
                    method: :delete,
                    data: {
                      turbo_confirm: "Вы уверены, что хотите удалить пользователя #{@active_user.full_name}?\n\nЭто действие необратимо и удалит:\n• Аккаунт пользователя\n• Всю авторизацию\n• Всю переписку с пользователем\n• Все связанные данные"
                    },
                    class: "w-full bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded-lg transition-colors flex items-center justify-center gap-2" do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                  </svg>
                  <span>Удалить пользователя</span>
                <% end %>
                <p class="text-xs text-gray-500 mt-2">Это действие необратимо. Все данные будут удалены навсегда.</p>
              </div>
            <% end %>
          </div>
        </div>
      </aside>
    <% end %>
  </div>
</div>
