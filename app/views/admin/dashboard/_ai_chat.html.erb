<div class="bg-white border-t border-gray-200 flex flex-col"
     style="height: 256px;"
     data-controller="admin-chat resizable-chat"
     data-admin-chat-restaurant-id-value="<%= @selected_restaurant&.id %>"
     data-resizable-chat-min-height-value="150"
     data-resizable-chat-max-height-value="600"
     data-resizable-chat-target="container">

  <!-- Resize handle -->
  <div class="h-2 bg-gray-100 border-b border-gray-200 cursor-ns-resize flex items-center justify-center hover:bg-gray-200 transition-colors group"
       data-action="mousedown->resizable-chat#startResize touchstart->resizable-chat#startResize dblclick->resizable-chat#toggleSize">
    <div class="w-12 h-1 bg-gray-300 rounded-full group-hover:bg-gray-400 transition-colors"></div>
  </div>

  <!-- Chat header -->
  <div class="px-4 py-3 border-b border-gray-200 flex items-center gap-2">
    <div class="w-8 h-8 bg-gradient-to-br from-purple-500 to-indigo-600 rounded-lg flex items-center justify-center">
      <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
      </svg>
    </div>
    <div class="flex-1">
      <h3 class="font-medium text-gray-900">AI Ассистент</h3>
      <p class="text-xs text-gray-500">Анализ данных клиента</p>
    </div>
    <!-- Expand/collapse buttons -->
    <button data-action="click->resizable-chat#toggleSize" class="p-1 text-gray-400 hover:text-gray-600 transition-colors" title="Развернуть/свернуть">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4"/>
      </svg>
    </button>
  </div>

  <!-- Messages area -->
  <div class="flex-1 overflow-y-auto p-4 space-y-3" data-admin-chat-target="messages">
    <!-- Welcome message -->
    <div class="flex justify-start">
      <div class="bg-gray-100 text-gray-800 rounded-lg px-4 py-2 max-w-md text-sm">
        Привет! Я AI-ассистент для анализа данных клиентов. Задайте мне вопрос о выбранном клиенте или попросите проанализировать его метрики.
      </div>
    </div>
  </div>

  <!-- Input area -->
  <div class="px-4 py-3 border-t border-gray-200">
    <div class="flex gap-2">
      <input
        type="text"
        placeholder="Задайте вопрос об аналитике клиента..."
        data-admin-chat-target="input"
        data-action="keydown->admin-chat#handleKeydown"
        class="flex-1 px-4 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-green-500 focus:border-green-500"
      >
      <button
        data-admin-chat-target="sendButton"
        data-action="click->admin-chat#send"
        class="px-4 py-2 bg-green-500 hover:bg-green-600 disabled:bg-gray-400 text-white rounded-lg transition-colors"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
        </svg>
      </button>
    </div>
  </div>
</div>
