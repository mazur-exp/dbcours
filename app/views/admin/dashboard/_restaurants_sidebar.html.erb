<aside class="w-64 bg-white border-r border-gray-200 flex flex-col" data-controller="admin-restaurants">
  <!-- Header -->
  <div class="p-4 border-b border-gray-200">
    <h2 class="text-lg font-semibold text-gray-900 mb-3">Рестораны</h2>

    <!-- Search -->
    <div class="relative">
      <input
        type="text"
        placeholder="Поиск..."
        data-admin-restaurants-target="search"
        data-action="input->admin-restaurants#filter"
        class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-green-500 focus:border-green-500"
      >
      <svg class="w-5 h-5 text-gray-400 absolute left-3 top-1/2 -translate-y-1/2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
      </svg>
    </div>
  </div>

  <!-- Restaurants list -->
  <div class="flex-1 overflow-y-auto" data-admin-restaurants-target="list">
    <% if restaurants.any? %>
      <% restaurants.each do |restaurant| %>
        <a
          href="<%= admin_dashboard_path(restaurant_id: restaurant.id) %>"
          data-restaurant-id="<%= restaurant.id %>"
          data-restaurant-name="<%= restaurant.name.downcase %>"
          class="block px-4 py-3 border-b border-gray-100 hover:bg-gray-50 transition-colors <%= 'bg-green-50 border-l-4 border-l-green-500' if selected_restaurant&.id == restaurant.id %>"
        >
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-gradient-to-br from-green-500 to-emerald-600 rounded-full flex items-center justify-center text-white font-medium text-sm">
              <%= restaurant.name.first.upcase %>
            </div>
            <div class="flex-1 min-w-0">
              <p class="font-medium text-gray-900 truncate text-sm"><%= restaurant.name %></p>
              <p class="text-xs <%= restaurant.period_sales.to_f > 0 ? 'text-green-600 font-semibold' : 'text-gray-400' %>">
                <%= format_currency(restaurant.period_sales.to_f) %>
              </p>
            </div>
            <% if restaurant.status != 'active' %>
              <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium <%= restaurant.status == 'paused' ? 'bg-yellow-100 text-yellow-800' : 'bg-red-100 text-red-800' %>">
                <%= restaurant.status == 'paused' ? 'Пауза' : 'Отток' %>
              </span>
            <% end %>
          </div>
        </a>
      <% end %>
    <% else %>
      <div class="p-4 text-center text-gray-500">
        <svg class="w-12 h-12 mx-auto mb-3 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
        </svg>
        <p class="text-sm">Нет ресторанов</p>
        <p class="text-xs mt-1">Добавьте первый ресторан через консоль</p>
      </div>
    <% end %>
  </div>
</aside>
