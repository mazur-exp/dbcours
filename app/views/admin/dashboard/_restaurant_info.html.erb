<aside class="w-80 bg-white border-l border-gray-200 flex flex-col overflow-hidden">
  <% if client %>
    <!-- Client header -->
    <div class="p-4 border-b border-gray-200">
      <div class="flex items-center gap-3 mb-4">
        <div class="w-14 h-14 bg-gradient-to-br from-green-500 to-emerald-600 rounded-xl flex items-center justify-center text-white font-bold text-xl">
          <%= restaurant.name.first.upcase %>
        </div>
        <div class="flex-1">
          <h2 class="text-lg font-bold text-gray-900"><%= restaurant.name %></h2>
          <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium <%= restaurant.active? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
            <%= restaurant.active? ? 'Активен' : restaurant.status.humanize %>
          </span>
        </div>
      </div>
    </div>

    <!-- Client details -->
    <div class="flex-1 overflow-y-auto p-4 space-y-4">
      <!-- Start date -->
      <div>
        <h3 class="text-xs font-medium text-gray-500 uppercase tracking-wider mb-2">Начало работы</h3>
        <p class="text-gray-900">
          <% if restaurant.start_date.present? %>
            <%= restaurant.start_date.strftime("%d %B %Y") %>
            <span class="text-gray-500 text-sm">
              (<%= distance_of_time_in_words_to_now(restaurant.start_date) %>)
            </span>
          <% else %>
            <span class="text-gray-400">Не указано</span>
          <% end %>
        </p>
      </div>

      <!-- Goals -->
      <div>
        <h3 class="text-xs font-medium text-gray-500 uppercase tracking-wider mb-2">Цели</h3>
        <% if restaurant.goals.present? %>
          <p class="text-gray-900 text-sm whitespace-pre-wrap"><%= restaurant.goals %></p>
        <% else %>
          <p class="text-gray-400 text-sm">Не указаны</p>
        <% end %>
      </div>

      <!-- Notes -->
      <div>
        <h3 class="text-xs font-medium text-gray-500 uppercase tracking-wider mb-2">Заметки</h3>
        <% if restaurant.notes.present? %>
          <p class="text-gray-900 text-sm whitespace-pre-wrap"><%= restaurant.notes %></p>
        <% else %>
          <p class="text-gray-400 text-sm">Нет заметок</p>
        <% end %>
      </div>

      <!-- Contact info -->
      <div>
        <h3 class="text-xs font-medium text-gray-500 uppercase tracking-wider mb-2">Контакт</h3>
        <div class="space-y-2">
          <% if restaurant.contact_name.present? %>
            <div class="flex items-center gap-2 text-sm">
              <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
              <span class="text-gray-900"><%= restaurant.contact_name %></span>
            </div>
          <% end %>

          <% if restaurant.contact_phone.present? %>
            <div class="flex items-center gap-2 text-sm">
              <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
              <a href="tel:<%= restaurant.contact_phone %>" class="text-green-600 hover:text-green-700"><%= restaurant.contact_phone %></a>
            </div>
          <% end %>

          <% if restaurant.contact_telegram.present? %>
            <div class="flex items-center gap-2 text-sm">
              <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm4.64 6.8c-.15 1.58-.8 5.42-1.13 7.19-.14.75-.42 1-.68 1.03-.58.05-1.02-.38-1.58-.75-.88-.58-1.38-.94-2.23-1.5-.99-.65-.35-1.01.22-1.59.15-.15 2.71-2.48 2.76-2.69a.2.2 0 00-.05-.18c-.06-.05-.14-.03-.21-.02-.09.02-1.49.95-4.22 2.79-.4.27-.76.41-1.08.4-.36-.01-1.04-.2-1.55-.37-.63-.2-1.12-.31-1.08-.66.02-.18.27-.36.74-.55 2.92-1.27 4.86-2.11 5.83-2.51 2.78-1.16 3.35-1.36 3.73-1.36.08 0 .27.02.39.12.1.08.13.19.14.27-.01.06.01.24 0 .38z"/>
              </svg>
              <a href="https://t.me/<%= restaurant.contact_telegram.gsub('@', '') %>" target="_blank" class="text-green-600 hover:text-green-700"><%= restaurant.contact_telegram %></a>
            </div>
          <% end %>

          <% if restaurant.contact_name.blank? && restaurant.contact_phone.blank? && restaurant.contact_telegram.blank? %>
            <p class="text-gray-400 text-sm">Контактные данные не указаны</p>
          <% end %>
        </div>
      </div>

      <!-- Results placeholder -->
      <div>
        <h3 class="text-xs font-medium text-gray-500 uppercase tracking-wider mb-2">Результаты</h3>
        <div class="bg-gray-50 rounded-lg p-3 text-center">
          <p class="text-gray-400 text-sm">Данные будут доступны после подключения аналитики</p>
        </div>
      </div>

      <!-- Sync panel -->
      <div class="border-t pt-4">
        <%= render 'sync_panel' %>
      </div>
    </div>

    <!-- Actions -->
    <div class="p-4 border-t border-gray-200 space-y-2">
      <button class="w-full flex items-center justify-center gap-2 px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg transition-colors text-sm font-medium">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
        </svg>
        Редактировать
      </button>
    </div>
  <% else %>
    <!-- No client selected -->
    <div class="flex-1 flex items-center justify-center p-4">
      <div class="text-center">
        <svg class="w-12 h-12 mx-auto mb-3 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
        </svg>
        <p class="text-gray-500 text-sm">Выберите клиента</p>
      </div>
    </div>
  <% end %>
</aside>
