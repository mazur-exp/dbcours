<%= render 'admin/shared/header' %>

<div class="flex h-[calc(100vh-64px)]" data-controller="admin-clients">
  <!-- Left sidebar: Clients list -->
  <%= render 'clients_sidebar', clients: @clients, selected_client: @selected_client %>

  <!-- Center: Analytics + AI Chat -->
  <div class="flex-1 flex flex-col overflow-hidden">
    <!-- Analytics section -->
    <%= render 'analytics_center', analytics: @analytics, selected_client: @selected_client %>

    <!-- AI Chat section -->
    <%= render 'ai_chat' %>
  </div>

  <!-- Right sidebar: Client info -->
  <%= render 'client_info', client: @selected_client %>
</div>
