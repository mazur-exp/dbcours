<%= render 'admin/shared/header' %>

<div class="flex h-[calc(100vh-64px)]" data-controller="admin-restaurants">
  <!-- Left sidebar: Restaurants list -->
  <%= render 'restaurants_sidebar', restaurants: @restaurants, selected_restaurant: @selected_restaurant %>

  <!-- Center: Analytics + AI Chat -->
  <div class="flex-1 flex flex-col overflow-hidden">
    <!-- Analytics section -->
    <%= render 'analytics_center', analytics: @analytics, selected_restaurant: @selected_restaurant %>

    <!-- AI Chat section -->
    <%= render 'ai_chat' %>
  </div>

  <!-- Right sidebar: Restaurant info -->
  <%= render 'restaurant_info', restaurant: @selected_restaurant %>
</div>
