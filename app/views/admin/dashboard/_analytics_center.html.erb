<div class="flex-1 p-6 overflow-y-auto bg-gray-50">
  <% if selected_client %>
    <!-- Client name header -->
    <div class="mb-6">
      <h2 class="text-2xl font-bold text-gray-900"><%= selected_client.name %></h2>
      <p class="text-gray-500 text-sm">Аналитика клиента</p>
    </div>

    <!-- Stats cards -->
    <div class="grid grid-cols-4 gap-4 mb-6">
      <div class="bg-white rounded-lg shadow p-4">
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
            </svg>
          </div>
          <div>
            <p class="text-2xl font-bold text-gray-900">0</p>
            <p class="text-xs text-gray-500">Заказов</p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-4">
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <div>
            <p class="text-2xl font-bold text-gray-900">$0</p>
            <p class="text-xs text-gray-500">Выручка</p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-4">
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
          </div>
          <div>
            <p class="text-2xl font-bold text-gray-900">0</p>
            <p class="text-xs text-gray-500">Клиентов</p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-4">
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 bg-yellow-100 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
            </svg>
          </div>
          <div>
            <p class="text-2xl font-bold text-gray-900">0.0</p>
            <p class="text-xs text-gray-500">Рейтинг</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Charts grid -->
    <div class="grid grid-cols-2 gap-4">
      <!-- Orders chart -->
      <div class="bg-white rounded-lg shadow p-4">
        <h3 class="font-semibold text-gray-900 mb-4">Заказы</h3>
        <div class="h-48">
          <canvas
            id="orders-chart"
            data-controller="chart"
            data-chart-type-value="line"
            data-chart-labels-value="<%= analytics[:orders][:labels].to_json %>"
            data-chart-data-value="<%= analytics[:orders][:data].to_json %>"
          ></canvas>
        </div>
      </div>

      <!-- Revenue chart -->
      <div class="bg-white rounded-lg shadow p-4">
        <h3 class="font-semibold text-gray-900 mb-4">Выручка</h3>
        <div class="h-48">
          <canvas
            id="revenue-chart"
            data-controller="chart"
            data-chart-type-value="line"
            data-chart-labels-value="<%= analytics[:revenue][:labels].to_json %>"
            data-chart-data-value="<%= analytics[:revenue][:data].to_json %>"
          ></canvas>
        </div>
      </div>

      <!-- New customers chart -->
      <div class="bg-white rounded-lg shadow p-4">
        <h3 class="font-semibold text-gray-900 mb-4">Новые клиенты</h3>
        <div class="h-48">
          <canvas
            id="customers-chart"
            data-controller="chart"
            data-chart-type-value="bar"
            data-chart-labels-value="<%= analytics[:customers][:labels].to_json %>"
            data-chart-data-value="<%= analytics[:customers][:data].to_json %>"
          ></canvas>
        </div>
      </div>

      <!-- Rating chart -->
      <div class="bg-white rounded-lg shadow p-4">
        <h3 class="font-semibold text-gray-900 mb-4">Рейтинг</h3>
        <div class="h-48">
          <canvas
            id="rating-chart"
            data-controller="chart"
            data-chart-type-value="line"
            data-chart-labels-value="<%= analytics[:rating][:labels].to_json %>"
            data-chart-data-value="<%= analytics[:rating][:data].to_json %>"
          ></canvas>
        </div>
      </div>
    </div>
  <% else %>
    <!-- No client selected -->
    <div class="flex items-center justify-center h-full">
      <div class="text-center">
        <svg class="w-16 h-16 mx-auto mb-4 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
        </svg>
        <h3 class="text-lg font-medium text-gray-900 mb-2">Нет данных для отображения</h3>
        <p class="text-gray-500">Выберите клиента из списка слева или добавьте нового клиента</p>
      </div>
    </div>
  <% end %>
</div>
