<% if @current_user %>
  <div class="relative" data-authenticated="true">
    <!-- Кнопка-триггер dropdown -->
    <button onclick="toggleUserDropdown()" class="bg-gray-100 hover:bg-gray-200 text-gray-800 font-medium py-1.5 px-3 rounded-lg transition-all flex items-center gap-2 text-sm">
      <div class="w-7 h-7 bg-blue-500 rounded-full flex items-center justify-center text-white font-semibold text-xs">
        <%= (@current_user.first_name || 'U')[0].upcase %>
      </div>
      <span><%= @current_user.first_name || 'Профиль' %></span>
      <svg class="w-3.5 h-3.5 transition-transform text-gray-500" id="dropdown-chevron" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
      </svg>
    </button>

    <!-- Dropdown меню -->
    <div id="user-dropdown" class="hidden absolute right-0 top-full mt-2 w-64 bg-white rounded-xl shadow-xl border border-gray-200 overflow-hidden z-50">
      <!-- Заголовок профиля -->
      <div class="px-4 py-3 bg-gradient-to-r from-blue-50 to-blue-100 border-b border-blue-200">
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 bg-blue-500 rounded-full flex items-center justify-center text-white font-bold">
            <%= (@current_user.first_name || 'U')[0].upcase %>
          </div>
          <div>
            <div class="font-bold text-gray-900">
              <%= [@current_user.first_name, @current_user.last_name].compact.join(' ').presence || 'Пользователь' %>
            </div>
            <% if @current_user.username.present? %>
              <div class="text-sm text-gray-600">@<%= @current_user.username %></div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Пункты меню -->
      <div class="py-2">
        <%= link_to root_path, class: "flex items-center gap-3 px-4 py-3 hover:bg-gray-100 transition-colors text-gray-700" do %>
          <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
          </svg>
          <span>Главная</span>
        <% end %>

        <%= link_to freecontent_path, class: "flex items-center gap-3 px-4 py-3 hover:bg-gray-100 transition-colors text-gray-700" do %>
          <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
          </svg>
          <span>Курс</span>
        <% end %>

        <div class="border-t border-gray-200 my-2"></div>

        <%= button_to auth_logout_path, method: :delete, class: "w-full flex items-center gap-3 px-4 py-3 hover:bg-red-50 transition-colors text-red-600", form: { data: { turbo: false } } do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
          </svg>
          <span>Выйти</span>
        <% end %>
      </div>
    </div>
  </div>
<% else %>
  <button id="auth-button" class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-6 rounded-lg transition-all shadow-md hover:shadow-lg" data-authenticated="false">
    <span class="flex items-center gap-2">
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
      </svg>
      Авторизация
    </span>
  </button>
<% end %>
